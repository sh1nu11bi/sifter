                                ;;

                            "Sherlock")
                                ./modules/credmods/sherlock.sh
                                ;;

                            "xRay")
                                ./modules/credmods/xray.sh
                                ;;

                            "Back")
                                modules
                                ;;

                            "Quit")
                                exit 1
