                                else
                                    ex_mods
			                    fi
			                    ;;

                            "FuzzyDander")
 #                               if [[ -f "/opt/sifter/modules/exmods/fuzzydander.sh" ]]; then
                                    echo -e "${LP}FuzzBunch & DanderSpritz Framework,"
                                    echo -e "codename:${RED}FuzzyDander${NC}"
