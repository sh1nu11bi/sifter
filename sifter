    cd /opt/sifter
    echo -e "${RED}"
    figlet -f mini "BruteDUM"
    echo -e "${ORNG}"
    echo -e "${YLW}BruteDUM is a bruteforcing tool that consists of Medusa, nCrack, Hydra${NC}"
    echo -e "${W}Would you like to continue?(y/n)${NC}"
    read M_ANS
    if [[ ${M_ANS} == 'y' ]]; then
        ./modules/exmods/brutedum.sh
    else
        ex_mods
	fi
}
