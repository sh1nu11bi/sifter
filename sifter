}
# Exploitation Modules
ex_mods(){
  cd /opt/sifter
  echo -e "${RED}"
  figlet -f mini "Exploitation Tools"
  echo -e "${ORNG}"
  PS3='What tool would you like to use?'
        options=("MS Specific Tools" "BruteDUM" "TigerShark" "Web Exploiters" "Search for Exploits" "Back" "Quit")
        select opt in "${options[@]}"
        do
                case $opt in
                    "MS Specific Tools")
                        echo -e "${YLW}These tools are used to exploit MicroSoft systems${NC}"
                        echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    ms_tools
                                else
                                    ex_mods
                                fi
			                    ;;

                    "BruteDUM")
                        bruters
                        ;;

                    "TigerShark")
                        echo -e "${YLW}TigerShark is a multi-tooled phishing framework${NC}"
                                echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    ./modules/exmods/tiger.sh
                                else
                                    ex_mods
                                fi
                                ;;

                    "Web Exploiters")
                        echo -e "${YLW}These tools are aimed at exploiting websites${NC}"
                                echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    web_tools
                                else
                                    ex_mods
                                fi
                                ;;

                    "Search for Exploits")
                        echo -e "${YLW}These tools allow you to search to certain exploits or vulnerabilities${NC}"
                                echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    search_tools
                                else
                                    ex_mods
                                fi
                                ;;

                    "Back")
                        modules
                        ;;

                    "Quit")
                        exit 1
                        ;;

                esac
        done
    echo -e "${NC}"
}
