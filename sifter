          do
                  case $opt in
                            "Seeker")
                                ./modules/credmods/seeker.sh
                                ;;

                            "Sherlock")
                                ./modules/credmods/sherlock.sh
                                ;;

                            "Back")
                                modules
                                ;;

                            "Quit")
                                exit 0
                                ;;
                    esac
            done
            echo -e "${NC}"
}
# Info Module-Category Selection
info_mods(){
    echo -e "${RED}"
    figlet -f mini "Info-Focused Modules"
    echo -e "${ORNG}"
    PS3='Which module category would you like to use?'
            options=("Enterprise Focus" "Individual Focus" "Back" "Quit") # "Sunny-Honey \n ssh HoneyPot"
            select opt in "${options[@]}"
            do
                    case $opt in
                            "Enterprise Focus")
                                cred_mods
                                ;;

                            "Individual Focus")
                                phone_mods
                                ;;
                            
                            "Back")
                                modules
                                ;;

                            "Quit")
                                exit 0
                                ;;
                    esac
            done
        echo -e "${NC}"
                
}
