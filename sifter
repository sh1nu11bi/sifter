                        echo -e "${W}Would you like to continue?(y/n)${NC}"
                        read M_ANS
                        if [[ ${M_ANS} == 'y' ]]; then
                            ./modules/exmods/ssploit.sh
                        else
                            ex_mods
			            fi
                        ;;

                    "FindSploit")
                        echo -e "${YLW}This tool allows you to search, copy or compile exploits${NC}"
                        echo -e "${W}Would you like to continue?(y/n)${NC}"
                        read M_ANS
                        if [[ ${M_ANS} == 'y' ]]; then
                            ./modules/exmods/fsploit.sh
                        else
                            ex_mods
			            fi
                        ;;

                    "Back")
                        modules
                        ;;

                    "Quit")
                        exit 1
                        ;;

                esac
        done
    echo -e "${NC}"
}
