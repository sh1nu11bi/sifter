#!/bin/bash
LPATH='/opt/sifter/'
ORNG='\033[0;33m'
NC='\033[0m'
W='\033[1;37m'
LP='\033[1;35m'
YLW='\033[1;33m'
LBBLUE='\e[104m'
RED='\033[0;31m'
LGRY='\033[0;37m'
INV='\e[7m'
BRED='\033[1;31m'
UPURPLE='\033[4;35m'
BIGreen='\033[1;92m'
BIYellow='\033[1;93m'
UBLUE='\033[4;34m'
URED='\033[4;31m'
STATUS='NO'
ARG=$2
STLTH=$1
WXTM=$(which xterm)
if [[ ${WXTM} == "/usr/bin/xterm" ]]; then
    INFO="/opt/sifter/info/ginfo.sh"
else
    INFO="/opt/sifter/info/info.sh"
fi
###########################
# Initial Anonymous Check #
###########################
if [[ ! -f "/home/$USER/.config/.anon_status" ]]; then
    echo "NO" > /home/$USER/.config/.anon_status
fi
cd /opt/sifter
##############################
