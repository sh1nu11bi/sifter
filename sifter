# Exploitation Modules
ex_mods(){
  echo -e "${RED}"
  figlet -f mini "Exploitation Modules"
  echo -e "${ORNG}"
  PS3='What tool would you like to use?'
        options=("MS Specific Tools" "TigerShark" "Web Exploiters" "ShodanSploit" "Back" "Quit")
        select opt in "${options[@]}"
        do
                case $opt in
                    "MS Specific Tools")
                        echo -e "${YLW}These tools are used to exploit MicroSoft systems${NC}"
                        echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    ms_tools
                                else
                                    exmods
                                fi
			                    ;;

                    "TigerShark")
                        echo -e "${YLW}TigerShark is a multi-tooled phishing framework${NC}"
                                echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    ./modules/exmods/tiger.sh
                                else
                                    exmods
                                fi
                                ;;

                    "Web Exploiters")
                        echo -e "${YLW}These tools are aimed at exploiting websites${NC}"
                                echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    web_tools
                                else
                                    exmods
                                fi
                                ;;

                    "ShodanSploit")
                                echo -e "${YLW}ShodanSploit allows for shodan searches to be done in the terminal${NC}"
                                echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    ./modules/exmods/ssploit.sh
                                else
                                    exmods
			                    fi
                                ;;

                    "Back")
                        modules
                        ;;

                    "Quit")
                        exit 0
                        ;;

                esac
        done
    echo -e "${NC}"
}
# MicroSoft Exploitation
ms_tools(){
  echo -e "${RED}"
  figlet -f mini "MicroSoft Exploitation Tools"
  echo -e "${ORNG}"
  PS3='What tool would you like to use?'
        options=("ActiveReign" "iSpy" "Back" "Quit")
        select opt in "${options[@]}"
        do
                case $opt in
			              "ActiveReign")
			                    echo -e "${YLW}ActiveReign is a Network-Attack toolkit${NC}"
                                echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    ./modules/exmods/ar3.sh
                                else
                                    exmods
                                fi
			                    ;;

                          "iSpy")
                                echo -e "${YLW}iSpy is a Microsft 'blue' vuln exploitation framework${NC}"
                                echo -e "${W}Would you like to continue?(y/n)${NC}"
                                read M_ANS
                                if [[ ${M_ANS} == 'y' ]]; then
                                    ./modules/exmods/ispy.sh
                                else
                                    exmods
			                    fi
			                    ;;
                          
                          "Back")
                                modules
                                ;;

                           "Quit")
                                exit 0
                                ;;
                esac
        done
    echo -e "${NC}"
}
